<div class="container mt-5">
  <h1 class="mb-4"><%= @annoncement.title %></h1>

  <% if @annoncement.images.attached? %>
    <div class="mb-4">
      <% @annoncement.images.each do |image| %>
        <%= image_tag image, class: "img-fluid mb-3 col-md-6", alt: @annoncement.title %>
      <% end %>
    </div>
  <% else %>
    <p>No images available for this announcement.</p>
  <% end %>

  <div class="mb-3">
    <p><strong>Description:</strong></p>
    <p><%= @annoncement.description %></p>
  </div>

  <div class="mb-3">
    <p><strong>Category:</strong> <%= @annoncement.category.name if @annoncement.category %></p>
  </div>

  <p>
    <strong>Contact us to inquire about the price for this announcement: </strong>
  </p>
  <%= button_to 'Demander le Prix', "#", method: :post, class: "btn btn-primary" %>

  <div class="mt-3">
    <%= link_to 'Retour', annoncements_path, class: "btn btn-secondary" %>
  </div>
</div>