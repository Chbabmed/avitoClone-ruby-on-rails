<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card p-4 shadow-lg signup-card w-50">
    <!-- Form Title -->
    <h2 class="text-center mb-2 text-dark">Create Your Account</h2>

    <!-- Signup Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <!-- First Name -->
        <div class="col-md-6 mb-3">
          <%= f.label :name, "First Name", class: "form-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "given-name", placeholder: "Enter your first name", class: "form-control" %>
        </div>

        <!-- Last Name -->
        <div class="col-md-6 mb-3">
          <%= f.label :last_name, "Last Name", class: "form-label" %>
          <%= f.text_field :last_name, autocomplete: "family-name", placeholder: "Enter your last name", class: "form-control" %>
        </div>
      </div>

      <!-- Phone -->
      <div class="mb-3">
        <%= f.label :phone, "Phone Number", class: "form-label" %>
        <%= f.telephone_field :phone, autocomplete: "tel", placeholder: "Enter your phone number", class: "form-control" %>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "Enter your email address", class: "form-control" %>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="text-muted d-block mb-1">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a password", class: "form-control" %>
      </div>

      <!-- Confirm Password -->
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", class: "form-control" %>
      </div>

      <!-- Submit Button -->
      <div class="d-grid gap-2">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg custom-btn" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="mt-4 text-center ">
      <p>
        Already have an account?
        <%= link_to "Login here", new_session_path(resource_name), class: "text-primary fw-bold" %>
      </p>

    </div>
  </div>
</div>