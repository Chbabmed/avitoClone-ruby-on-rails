<div class="container">
  <h1>Dashboard</h1>

  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mt-2">
    <ol class="breadcrumb" style="border-radius: 8px; padding-left: 3px;margin-top: -5px; opacity: 0.8; font-size: 15px; ">
      <li class="breadcrumb-item"><a href="/" style="text-decoration: none; color:#565757">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
  </nav>
  <hr class="border border-2 opacity-75 rounded">
  <div class="row mt-4">
    <!-- Total Announcements Card -->
    <div class="row mt-4 d-flex justify-content-center">
      <!-- Total Announcements Card -->
      <div class="col-sm-10 col-md-6 col-lg-4 mb-4 d-flex justify-content-center">
        <div class="card shadow text-white card-custom">
          <div class="card-header d-flex justify-content-center align-items-center fw-bold" style="font-size: 20px; height: 70px;">
            <span>Total Announcements</span>
          </div>
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-center align-items-center">
          <span class="px-4 py-3 rounded-circle" style="background-color: #81d1ef;">
            <%= @annoncements_count %>
          </span>
            </h5>
          </div>
        </div>
      </div>

      <!-- Total Sales Card -->
      <div class="col-sm-10 col-md-6 col-lg-4 mb-4 d-flex justify-content-center">
        <div class="card shadow text-white card-custom2">
          <div class="card-header d-flex justify-content-center align-items-center fw-bold" style="font-size: 20px; height: 70px;">
            <span>Total Sales</span>
          </div>
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-center align-items-center">
          <span class="px-4 py-3 rounded-circle" style="background-color: #efa596;">
            NA
          </span>
            </h5>
          </div>
        </div>
      </div>

      <!-- Some Future Statistic Card -->
      <div class="col-sm-10 col-md-6 col-lg-4 mb-4 d-flex justify-content-center">
        <div class="card shadow text-white card-custom3">
          <div class="card-header d-flex justify-content-center align-items-center fw-bold" style="font-size: 20px; height: 70px;">
            <span>Future Statistic</span>
          </div>
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-center align-items-center">
          <span class="px-4 py-3 rounded-circle" style="background-color: #f1907d;">
            N/A
          </span>
            </h5>
          </div>
        </div>
      </div>
    </div>








  </div>
</div>
